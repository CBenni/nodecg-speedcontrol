{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"type": "object",
	"properties": {
		"live": {"type": "boolean"},
		"twitch": {
			"type": "object",
			"properties": {
				"enable": {"type": "boolean"},
				"clientID": {"type": "string"},
				"clientSecret": {"type": "string"},
				"redirectURI": {"type": "string"},
				"ffzIntegration": {"type": "boolean"},
				"streamTitle": {"type": "string"},
				"streamDefaultGame": {"type": "string"}
			}
		},
		"schedule": {
			"type": "object",
			"properties": {
				"defaultURL": {"type": "string"},
				"ignoreGamesWhileImporting": {
					"type": "array",
					"uniqueItems": true,
					"items": {"type": "string"}
				}
			}
		},
		"tiltify": {
			"type": "object",
			"properties": {
				"enable": {"type": "boolean"},
				"key": {"type": "string"}
			}
		},
		"enableG4GIntegration": {"type": "boolean"},
		"enableSRCDonations": {"type": "boolean"},
		"SRCEventSlug": {"type": "string"},
		"enableMarqueePanel": {"type": "boolean"},
		"api": {
			"type": "object",
			"properties": {
				"enable": {"type": "boolean"},
				"sharedkey": {"type": "string"},
				"hooks": {
					"type": "array",
					"uniqueItems": true,
					"items": {"type": "string"}
				}
			}
		}
	}
}